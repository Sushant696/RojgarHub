generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  CANDIDATE
  EMPLOYER
}

enum InterviewStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum JobStatus {
  OPEN
  CLOSED
}

enum ApplicationStatus {
  PENDING
  REVIEWING
  ACCEPTED
  REJECTED
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  contact   String    @unique
  username  String 
  password  String
  role      UserRole  
  isActive  Boolean   @default(true)
  refreshToken String? 

  candidateProfile CandidateProfile?
  employerProfile  EmployerProfile?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model CandidateProfile {
  id          String    @id @default(uuid())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String    @unique
  
  fullName    String
  phone       String 
  profile     String?
  bio         String?   @db.Text
  skills      Json?     
  location    String?
  education   Json?     
  experience  Json?   
  resumeUrl   String?
  websiteLink String?

  applications JobApplication[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model EmployerProfile {
  id                String    @id @default(uuid())
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String    @unique

  companyName        String
  companySize        Int?
  industry           String?
  location           String?
  profile            String?
  websiteLink        String?
  companyDescription String?  @db.Text

  jobs               Job[]

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model Job {
  id              String    @id @default(uuid())
  employer        EmployerProfile  @relation(fields: [employerId], references: [id])
  employerId      String

  title           String
  image           String?
  jobDescription  String    @db.Text
  requirements    Json      
  type            String
  location        String
  salaryMin       Int?  
  salaryMax       Int? 
  status          JobStatus @default(OPEN)
  skills         Json?     
  
  applications    JobApplication[] @relation("JobToApplications")

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}


model Interview {
  id               String   @id @default(uuid())
  jobApplicationId String
  jobApplication   JobApplication @relation(fields: [jobApplicationId], references: [id])
  location         String
  scheduledAt      DateTime
  notes            String?   @db.Text
  status           InterviewStatus @default(PENDING)
  time             String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}


model JobApplication {
  id            String    @id @default(uuid())

  job           Job       @relation("JobToApplications", fields: [jobId], references: [id], onDelete: Cascade)
  jobId         String

  candidate     CandidateProfile @relation(fields: [candidateId], references: [id])
  candidateId   String

  fullName       String
  phone          String?
  profilePicture String?
  skills         Json?     
  location       String?
  education      Json?     
  experience     Json?   
  resumeUrl      String?
  websiteLink    String?

  status        ApplicationStatus @default(PENDING)
  interviews    Interview[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([jobId, candidateId])  
}
